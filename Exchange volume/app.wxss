page {
    height: 100%;
    width: 100%;
}

.container {
    height: 100%;
    width: 100%;
    position: relative;
}

.nav {
    width: 100%;
    overflow: hidden;
    position: relative;
    top: 0;
    left: 0;
    z-index: 10;
}

.nav-title {
    width: 100%;
    height: 45px;
    line-height: 45px;
    text-align: center;
    position: absolute;
    bottom: 0;
    left: 0;
    z-index: 10;
    font-family: PingFang-SC-Medium;
    font-size: 36rpx;
    letter-spacing: 2px;
    border-bottom: 1rpx solid rgb(225,225,230);
}

.nav .back {
    width: 22px;
    height: 22px;
    position: absolute;
    bottom: 0;
    left: 0;
    padding: 10px 15px;
}

.nav .img_poster {
    width: 137rpx;
    height: 88rpx;
    position: absolute;
    left: 30rpx;
    top: 50%;
    transform: translateY(-50%);
}

.bg-white {
    background-color: #fff;
}

.overflow {
    overflow: auto;
}

.hidden {
    overflow: hidden;
}

.back_img_nav {
    width: 19rpx;
    height: 34rpx;
    padding: 10px 15px;
    position: absolute;
    left: 10rpx;
    top: 50%;
    transform: translateY(-50%);
}

.img_v_01_authentication {
    width: 40rpx;
    height: 40rpx;
    position: absolute;
    top: -10rpx;
    left: -10rpx;
}

.right_flex {
    align-items: flex-end;
}