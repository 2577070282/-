.search_index {
    width: 750rpx;
    padding: 0 30rpx;
    margin-top: 20rpx;
    position: relative;
    display: flex;
    align-items: center;
}

.icn_search {
    width: 34rpx;
    height: 34rpx;
    position: absolute;
    left: 50rpx;
    top: 50%;
    transform: translateY(-50%);
}

.search_index input {
    background: rgb(244,244,248);
    border-radius: 30rpx;
    height: 60rpx;
    width: 554rpx;
    font-size: 24rpx;
    padding-left: 66rpx;
}

.serach {
    color: rgb(42,42,42);
    font-size: 28rpx;
    margin-left: 12rpx;
}

.icn_search_hot {
    width: 44rpx;
    height: 62rpx;
    margin-right: 20rpx;
}

.hotsearch_top {
    display: flex;
    align-items: center;
    padding-left: 33rpx;
    height: 62rpx;
    line-height: 62rpx;
    margin-top: 30rpx;
}

.hotsearch_top view {
    color: rgb(51,51,51);
    font-weight: 700;
    font-size: 28rpx;
}

.HotSearchWord {
    display: flex;
    flex-wrap: wrap;
    margin: 30rpx;
}

.HotSearchWord_item {
    height: 50rpx;
    line-height: 50rpx;
    text-align: center;
    background: rgb(245,245,250);
    border-radius: 24rpx;
    margin-right: 20rpx;
    font-size: 24rpx;
    color: rgb(102,102,102);
    padding: 0 60rpx;
    margin-bottom: 30rpx;
}

.HotSearchWord_item:nth-child(3) {
    width: 240rpx;
    padding: 0;
}

.img_nothing {
    width: 220rpx;
    height: 152rpx;
}

.no_search {
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%,-50%);
    text-align: center;
}

.no_search view {
    color: rgb(153,153,153);
    font-size: 24rpx;
    margin: 24rpx auto;
}

.no_search button {
    background: rgb(210,26,18);
    color: #fff;
    height: 70rpx;
    line-height: 70rpx;
    width: 240rpx;
    border-radius: 35rpx;
    font-size: 28rpx;
}

.classify {
    height: 90rpx;
    width: 750rpx;
    background: #fff;
    display: flex;
    box-shadow: 0 5rpx 15rpx 0 rgba(0,0,0,0.05);
}

.classify_list {
    width: 33.3%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: rgb(102,102,102);
    font-size: 32rpx;
    position: relative;
}

.classify_line {
    width: 60rpx;
    height: 6rpx;
    border-radius: 3rpx;
    background: rgb(210,26,18);
    position: absolute;
    bottom: 10rpx;
    left: 50%;
    transform: translate(-50%);
}

.classify_itemcolor {
    color: rgb(42,42,42);
    font-weight: 700;
}

.middle {
    position: relative;
}

.icn_01_one {
    width: 130rpx;
    height: 130rpx;
    border-radius: 26rpx;
    position: relative;
    margin-right: 30rpx;
}

.list_bottom {
    display: flex;
    padding: 30rpx;
    position: relative;
    align-items: center;
    justify-content: space-between;
}

.line {
    position: absolute;
    width: 92.5%;
    height: 2rpx;
    background: rgb(226,225,230);
    left: 30rpx;
    bottom: 0;
}

.list_bottom_top {
    width: 59%;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.list_bottom_name {
    font-size: 32rpx;
    font-weight: 700;
    position: relative;
    display: flex;
    margin-bottom: 13rpx;
    width: 100%;
}

.list_bottom_name_list {
    position: relative;
    width: 100%;
    display: flex;
}

.list_bottom_name_game {
    margin-right: 20rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.img_sell_01 {
    width: 30rpx;
    height: 30rpx;
}

.list_bottom_type {
    font-size: 24rpx;
    color: rgb(102,102,102);
}

.list_bottom_info {
    font-size: 24rpx;
    color: rgb(153,153,153);
    margin-top: 13rpx;
}

.list_bottom_right {
    font-size: 20rpx;
    text-align: center;
    display: flex;
    flex-direction: column;
}

.list_bottom_right_num {
    font-size: 32rpx;
    font-weight: 700;
    margin-bottom: 8rpx;
}

.list_bottom_right_day {
    background: rgb(251,237,236);
    color: rgb(210,26,18);
    letter-spacing: 2px;
    height: 40rpx;
    line-height: 40rpx;
    width: 140rpx;
    text-align: center;
    border-radius: 20rpx;
}

.button_bototm_center {
    position: absolute;
    width: 100%;
    height: 100%;
    opacity: 0;
}

.otherlist_bottom_list {
    flex-direction: column;
    padding: 0 20rpx 40rpx;
    margin: 40rpx 30rpx;
}

.otherlist_bottom_list .line {
    left: 10rpx;
    width: 98%;
}

.otherlist_bottom_list_item {
    display: flex;
    justify-content: space-between;
    height: 60rpx;
    align-items: center;
    border-radius: 20rpx 20rpx 20rpx 0;
    background: rgb(245,245,250);
    font-size: 32rpx;
    font-weight: 700;
    width: 650rpx;
    padding: 0 20rpx;
    margin-bottom: 30rpx;
}

.otherlist_bottom_list_time {
    font-size: 28rpx;
    color: rgb(153,153,153);
    font-weight: 400;
}

.connection {
    width: 650rpx;
    padding: 0 20rpx;
    font-size: 28rpx;
    color: rgb(42,42,42);
    display: flex;
}

.tel {
    margin: 25rpx 0;
}

.otherdec {
    color: rgb(153,153,153);
    font-size: 28rpx;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    align-items: center;
    padding: 0 20rpx;
    width: 648rpx;
}

.otherdec_bg {
    width: 78%;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.nickName {
    width: 78%;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}