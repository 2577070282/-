@import "../../common/toBar.wxss";

.container {
    background: #f4f4f8;
}

.bg-white {
    background: rgb(210,26,18);
    color: rgb(255,255,255);
}

.top_bg {
    height: 90rpx;
    width: 100%;
    background: rgb(210,26,18);
    position: absolute;
    left: 0;
    top: 0;
}

.nav-title {
    border-bottom: none;
}

.top_info {
    padding: 33rpx;
    background: #fff;
    border-radius: 20rpx;
    margin: 0 30rpx 20rpx;
    height: 114rpx;
    display: flex;
    align-items: center;
    position: relative;
}

.toux {
    width: 109rpx;
    height: 109rpx;
    border-radius: 50%;
}

.toux_bg {
    width: 109rpx;
    height: 109rpx;
    border-radius: 50%;
    padding: 5rpx;
    border: 1rpx solid #d21a12;
}

.top_info_center {
    display: flex;
    flex-direction: column;
    font-size: 28rpx;
    color: rgb(42,42,42);
    margin-left: 22rpx;
    width: 80%;
}

.img_v_01 {
    width: 48rpx;
    height: 48rpx;
    margin-right: 12rpx;
}

.img_v_01_bg {
    display: flex;
    align-items: center;
    margin-top: 11rpx;
}

.img_v_01_font {
    font-size: 22rpx;
    color: rgb(102,102,102);
}

.message {
    display: flex;
    height: 36rpx;
    width: 630rpx;
    margin: 0 30rpx;
    background: #fff;
    padding: 37rpx 30rpx;
    justify-content: space-between;
    font-size: 28rpx;
    color: rgb(42,42,42);
    align-items: center;
    border-bottom: 1rpx solid rgb(238,237,242);
}

.message_left {
    display: flex;
    align-items: center;
    position: relative;
}

.btn_me_information {
    width: 34rpx;
    height: 36rpx;
    margin-right: 21rpx;
}

.btn_arrow_black {
    width: 12rpx;
    height: 24rpx;
    margin-left: 16rpx;
}

.perfect {
    font-size: 24rpx;
}

.concactlist {
    display: flex;
    margin: 20rpx 30rpx;
}

.concactlist_item {
    width: 100%;
    height: 100%;
    position: relative;
}

.btn_me_group {
    width: 335rpx;
    height: 139rpx;
}

.btn_me_group_button {
    position: absolute;
    top: 0;
    left: 0;
    opacity: 0;
}

.concactlist_item:nth-last-child(1) {
    margin-left: 20rpx;
}

.mine_bottom {
    font-size: 22rpx;
    color: rgb(153,153,153);
    text-align: center;
    position: absolute;
    bottom: 111rpx;
    left: 50%;
    transform: translate(-50%);
    width: 100%;
}

.mine_bottom_top {
    margin-bottom: 30rpx;
}

.mine_bottom_bottom view:nth-last-child(1) {
    margin-top: 10rpx;
}

.hidden_login {
    width: 100%;
    text-align: center;
    height: 100%;
}

.img_authorization {
    width: 318rpx;
    height: 172rpx;
    margin-top: 193rpx;
}

.login {
    background: rgb(210,26,18);
    border-radius: 44rpx;
    color: #fff;
    width: 450rpx;
    height: 90rpx;
    margin-bottom: 20rpx;
    font-size: 28rpx;
    line-height: 90rpx;
}

.backindex {
    background: rgb(255,255,255);
    width: 448rpx;
    height: 88rpx;
    border-radius: 44rpx;
    color: rgb(51,51,51);
    font-size: 28rpx;
    line-height: 90rpx;
    box-shadow: 1rpx 1rpx 1rpx 1rpx rgb(225,225,229);
    border: 1rpx solid #e1e1e5;
}

.login_font {
    font-size: 28rpx;
    letter-spacing: 2rpx;
    margin: 40rpx auto 80rpx;
    color: rgb(51,51,51);
}

.nickName {
    padding-left: 8rpx;
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: nowrap;
}

.nickName_name {
    width: 60%;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.number {
    width: 40%;
    color: rgb(153,153,153);
    font-size: 24rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    text-align: right;
}

.dot_tar_mine {
    width: 12rpx;
    height: 12rpx;
    border-radius: 50%;
    background: rgb(210,26,18);
    position: absolute;
    top: -5rpx;
    right: -10rpx;
}